/**index.wxss**/
page{
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

@media (prefers-color-scheme: dark) {
  page{
    background: #272727;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }
}

.radio-group {
    border-bottom: 1px solid #ddd;
    width:100%;
    text-align: left;
}
.radio {
    display: block;
    border-top: 1px solid #ddd;
    padding: 5px;
}
.info{
  margin:10px;
  color:#07c160;
}
